<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.turbov2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_liked"
        android:name="com.example.turbov2.LikedFragment"
        android:label="Seçilmişlər"
        tools:layout="@layout/fragment_liked" />

    <fragment
        android:id="@+id/navigation_add_new"
        android:enabled="false"
        android:visible="false"
        android:title="Yeni Elan"
        android:icon="@drawable/add_btn"/>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.turbov2.FragmentProfile"
        android:label="Kabinet"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_parameters"
        android:name="com.example.turbov2.FragmentParameters"
        android:label="Daha çox"
        tools:layout="@layout/fragment_parameters" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.turbov2.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_otpFragment"
            app:destination="@id/otpFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/otpFragment"
        android:name="com.example.turbov2.ui.login.OtpFragment"
        android:label="OTP"
        tools:layout="@layout/fragment_otp">

        <argument
            android:name="verificationId"
            app:argType="string" />
        <action
            android:id="@+id/action_otpFragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>


</navigation>

