<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentParameters"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daha Çox"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:elevation="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#FFFFFF"
        android:textColor="@android:color/black"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_dark_mode" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tərtibat rejimi"
        app:icon="@drawable/darkmode"
        android:textColor="@color/black"
        android:backgroundTintMode="add"
        android:backgroundTint="#FFFFFF"
        app:iconTintMode="multiply"
        android:textAlignment="textStart"
        app:iconGravity="end"
        app:cornerRadius="12dp"
        app:iconSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dil seçimi"
        app:icon="@drawable/language"
        app:iconSize="34dp"
        app:iconPadding="8dp"
        app:iconTintMode="multiply"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:textAlignment="textStart"
        app:iconGravity="end"
        app:cornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_dark_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dealers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dilerlər"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="start"
        android:textAlignment="viewStart"
        app:cornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_autocatalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avtokataloq"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="start"
        android:textAlignment="viewStart"
        app:cornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_dealers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bizimlə əlaqə"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="start"
        android:textAlignment="viewStart"
        app:cornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_autocatalog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tətbiq haqqında"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="start"
        android:textAlignment="viewStart"
        app:cornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
